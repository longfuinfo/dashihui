<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    tools:context="com.dashihui.afford.wxapi.WXEntryActivity">

    <LinearLayout
        android:id="@+id/set_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/affordshop_detail_border"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip_1"
            android:background="@color/confirmorder_line" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/affordshop_detail_border"
            android:padding="@dimen/dip_16"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/wxFriend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/share_friend"
                android:drawablePadding="@dimen/dip_10"
                android:layout_marginLeft="@dimen/dip_16"
                android:gravity="center"
                android:text="微信好友"
                android:background="@drawable/affordshop_goods_bg"
                android:textColor="@color/personal_textview"
                android:textSize="@dimen/size14" />

            <TextView
                android:id="@+id/wxCircleFriends"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/share_cfriend"
                android:background="@drawable/affordshop_goods_bg"
                android:drawablePadding="@dimen/dip_10"
                android:layout_marginLeft="@dimen/dip_26"
                android:gravity="center"
                android:text="微信朋友圈"
                android:textColor="@color/personal_textview"
                android:textSize="@dimen/size14" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip_1"
            android:background="@color/confirmorder_line" />
        <TextView
            android:id="@+id/cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_tabs"
            android:gravity="center"
            android:padding="16dp"
            android:text="@string/camera_cancel"
            android:textColor="@color/personal_textview"
            android:textSize="@dimen/size16" />


    </LinearLayout>
</RelativeLayout>
